{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "extends": "airbnb-base",
  "rules": {
    "strict": "off",
    // When given a choice I prefer no semicolons.
    // However, I will use semicolons for this exercise. 
    "semi": [
      "error",
      "always"
    ],
    // Cleaner git history
    "comma-dangle": [
      "error",
      "only-multiline"
    ],
    "no-console": [
      "off"
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "always"
      }
    ],
    "class-methods-use-this": "off",
    "object-curly-newline": [
      "error",
      {
        "multiline": true
      }
    ],
    "global-require": "off",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ]
  },
  "globals": {
    "use": true
  }
}
